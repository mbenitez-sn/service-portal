(function() {
	data.user = gs.getUserID();
	data.chartData = [];
	data.chartLabels = [];
	data.chartType = options.chart_type;
	data.chartTitle = options.title;
	
	var gr = new GlideAggregate(options.table);
		gr.addEncodedQuery(options.filter);
		gr.addAggregate('COUNT', options.display_field+'');
		gr.query();
	
	while(gr.next())
	{
		var label = gr.getDisplayValue(options.display_field)+'';
		var num = (gr.getAggregate('COUNT', options.display_field+'') * 1);
		
		(data.chartData).push(num);
		(data.chartLabels).push(label);
	}
	
})();]]></script>
