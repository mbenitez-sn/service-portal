<client_script><![CDATA[function() {
  /* widget controller */
	var c = this;
	
	c.chart = {};
	c.chart.type = c.data.chartType;
	c.chart.labels = c.data.chartLabels;
	c.chart.data = c.data.chartData;
	c.chart.options = {
		title: {
            display: true,
            text: c.data.chartTitle
        },
		scales:{
			yAxes:[{ticks:{beginAtZero: true}}],
			xAxes:[{gridLines:{display: false}}]
		}
	};
}]]></client_script>
